generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Whisper {
  id                String       @id @default(uuid())
  title             String
  userId            String
  createdAt         DateTime     @default(now())
  fullTranscription String
  audioTracks       AudioTrack[]

  transformations Transformation[]
}

model Transformation {
  id           String   @id @default(uuid())
  whisperId    String
  whisper      Whisper? @relation(fields: [whisperId], references: [id])
  isGenerating Boolean  @default(true)
  typeName     String
  text         String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model AudioTrack {
  id                   String   @id @default(uuid())
  fileUrl              String
  partialTranscription String
  createdAt            DateTime @default(now())
  whisper              Whisper  @relation(fields: [whisperId], references: [id])
  whisperId            String
  language             String? // Added for language selection
}

model PromptTemplate {
  id        String   @id @default(uuid())
  userId    String   // Links to the user who created this template
  name      String   // Display name for the template (e.g., "My Custom Email Style")
  prompt    String   // The actual prompt text that gets sent to the LLM
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
